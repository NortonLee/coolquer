.view-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  font-size: 14px;
}

.view-row image {
  width: 40px;
  height: 40px;
}

.view-row .view-col {
  width: 33.333%;
  color: #666;
}

.more {
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 14px;
  margin-top: 10rem;
}

.self-view {
  margin: 2rem 0.5rem;
}

.self-view .search-input {
  width: 80%;
}

.self-view input {
  border-bottom: 1px solid #eee;
  text-align: left;
  height: 2rem;
  line-height: 2rem;
  font-size: 18px;
  padding: 0 1rem;
}

.self-view image{
  width:30px;
  height: 30px;
  margin: 0 1rem;
}
